// prisma/schema.prisma
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"  
}

model User {
  id               String        @id @unique  // This will be the Supabase Auth user UUID
  name             String?
  email            String        @unique
  stripeCustomerId String?       @unique
  colorScheme      String        @default("theme-orange")
  themePreference  String        @default("dark")
  credits          Int           @default(5)
  creditsReminderThresholdSent Boolean @default(false)
  lastPaygPurchaseAt DateTime?
  lastFreeRefillAt DateTime      @default(now())
  Subscription     Subscription?
  createdAt        DateTime      @default(now())  // Add this
  updatedAt        DateTime      @updatedAt       // Add this
}

model Subscription {
  stripeSubscriptionId String   @id @unique
  interval             String
  status               String
  planId               String
  currentPeriodStart   Int
  currentPeriodEnd     Int
  periodEndReminderSent Boolean @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id])
  userId               String   @unique
}
